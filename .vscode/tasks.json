{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "docker compose up",
      "type": "shell",
      "command": "docker compose up",
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "docker compose up build",
      "type": "shell",
      "command": "docker compose up --build"
    },
    {
      "label": "docker compose down",
      "type": "shell",
      "command": "docker compose down"
    },
    {
      "label": "build-api",
      "type": "shell",
      "command": "sleep 5 && cd ./todo-api && yarn build && yarn generate:client",
      "windows": {
        "command": "start-sleep -seconds 5; cd ./todo-api; yarn build; yarn generate:client;"
      },
      "runOptions": {
        "runOn": "folderOpen"
      },
      "presentation": {
        "reveal": "silent",
        "revealProblems": "onProblem",
        "close": true
      }
    },
    {
      "label": "build-ui",
      "type": "shell",
      "command": "cd ./todo-ui && yarn build",
      "windows": {
        "command": "cd ./todo-ui; yarn build;"
      },
      "runOptions": {
        "runOn": "folderOpen"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "silent",
        "revealProblems": "onProblem",
        "close": true
      },
      "dependsOn": ["build-api"]
    }
  ]
}

