{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "ui: launch",
      "request": "launch",
      "type": "chrome",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}/ui/"
    },
    {
      "name": "api: attach",
      "request": "attach",
      "type": "node",
      "port": 9229,
      "address": "0.0.0.0",
      "restart": true,
      "remoteRoot": "/app",
      "localRoot": "${workspaceFolder}/api/",
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true
    }
  ]
}

